<div class="page-header">
  <h1>
    Follows
    <a href="/follows/new" class="btn btn-lg btn-success">New Follow</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>City</th>
        <th>Actions</th>
      </tr>

      <% @follows.each do |follow| %>
      <tr>
        <td>
          <% if follow.user.present? %>
            <a href="/users/<%= follow.user.id %>">
              <%= follow.user.email %>
            </a>
          <% end %>
        </td>
        <td>
          <% if follow.city.present? %>
            <a href="/cities/<%= follow.city.id %>">
              <%= follow.city.country_id %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/follows/<%= follow.id %>" class="btn btn-primary">Show</a>
          <a href="/follows/<%= follow.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_follow/<%= follow.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @follows, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
