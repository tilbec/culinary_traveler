<div class="page-header">
  <h3><%= @user.username %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>City</th>
        <th>Image</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>

      <% @recipe_list.each do |recipe| %>
      <tr>
        <td><a href="/recipes/<%= recipe.id %>"><%= recipe.name %></a></td>
        <td><a href="cities/<%= recipe.city_id %>"><%= recipe.city.name %>, <%= recipe.city.country.name %></a></td>
        <td><img src="<%= recipe.image %>" width="200"></td>
        <td><%= recipe.description %></td>

        <td>
          <a href="/recipes/<%= recipe.id %>" class="btn btn-primary">Show</a>

          <% if current_user == recipe.user %>
            <a href="/recipes/<%= recipe.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_recipe/<%= recipe.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>



<!-- A User has many recipes -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Recipes
      </li>

      <% @user.recipes.each do |recipe| %>
        <li class="list-group-item">
          <a href="/recipes/<%= recipe.id %>">
            <%= recipe.name %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/recipes/<%= recipe.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <%if current_user == recipe.user %>
              <a href="/recipes/<%= recipe.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>
              <a href="/delete_recipe/<%= recipe.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

