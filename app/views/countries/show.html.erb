<div class="page-header">
  <h3>Country #<%= @country.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @country.name %></dd>

      <dt>Map</dt>
      <dd><%= @country.map %></dd>

      <dt>Description</dt>
      <dd><%= @country.description %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/countries" class="btn btn-primary">
        Back
      </a>
      <a href="/countries/<%= @country.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_country/<%= @country.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Country has many cities -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Cities
      </li>

      <% @country.cities.each do |city| %>
        <li class="list-group-item">
          <a href="/cities/<%= city.id %>">
            <%= city.country_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/cities/<%= city.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/cities/<%= city.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_city/<%= city.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_city" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for country_id -->
      <input type="hidden" name="country_id" value="<%= @country.id %>">

      <!-- Label and input for image -->
      <div class="form-group">
        <label for="image" class="control-label">
          Image
        </label>

        <input type="text" id="image" name="image" placeholder="Image" class="form-control" value="">
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"></textarea>
      </div>

      <button class="btn btn-block btn-success">
        Create City
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>
